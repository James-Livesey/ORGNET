{
    "files.associations": {
        "array": "cpp",
        "*.asm": "platformio-debug.asm",
        "*.inc": "platformio-debug.asm"
    },
    "[platformio-debug.asm]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false
    },
    "cmake.sourceDirectory": "${workspaceFolder}/firmware",
    "cmake.buildDirectory": "${workspaceFolder}/firmware/build",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.compilerPath": "/usr/bin/g++-14"
}